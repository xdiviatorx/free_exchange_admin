<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" >
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTheme" parent="AppTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorButtonNormal">@color/loginButtonColor</item>
    </style>

    <style name="ImagePreviewTheme" parent="AppTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorButtonNormal">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorLightGray</item>
    </style>


    <style name="LoginSplashText" >
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:shadowColor">@color/colorMediumGray</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="SearchPullText.Base" parent="TextAppearance.AppCompat" >
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SearchPullCategoriesText" parent="SearchPullText.Base" >
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="SearchPullDataText" parent="SearchPullText.Base">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="SearchPullText" parent="SearchPullText.Base">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SearchPullInfoText" parent="SearchPullText.Base">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="halfTransparentCardViewText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>
    
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="CustomTransparentImageButtonTheme">
        <item name="colorButtonNormal">@color/colorTransparent</item>
    </style>

    <style name="DeletePopupButtonTheme">
        <item name="colorButtonNormal">@color/loginButtonColor</item>
    </style>

    <style name="CustomCardViewTheme">

    </style>

    <style name="AcceptButtonTheme">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

</resources>
